<% layout("/layouts/boilerplate") -%>

<body>
    <h3 class="mt-3"><b> <%= listing.title %></b></h3>

    <div class="card listing-card col-6" style="width: 50rem;">
        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
        <div class="card-body">
            
            <p class="card-text">
                <p>Posted by <b><i><%= listing.owner.username %></i></b> </p>
                
                <%= listing.description %> <br>
                &#8377; <%= listing.price %> <br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>
        </div>
    </div>
   
    <br>
    <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark">Edit Listing</a>
    
            <br><br>
    
            <form method="get" action="/listings/<%= listing._id %>?_method=delete">
                <button class="btn btn-danger">Delete Listing</button>
            </form>
        </div>
    <% } %>
    
    <hr>

    
        <div class="reviews" novalidate class="needs-validation">
            <% if (currUser) { %>
            <h4>Leave a Review</h4>
            <form action="/listings/ <%= listing.id %>/reviews" method="post">
            <div class="rating mb-2 mt-2">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>

                <div class="comments mb-2 mt-2">
                    <label for="comments" class="form-label">Comments</label>
                    <textarea name="review[comments]" id="comments" class="form-control" required></textarea>
                </div>
                
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
            <% } %>
        </div>     
    

</body>


